@section Scripts{ 

    <script>
        var colors = {
            primary: $('.colors .bg-primary').css('background-color'),
            primaryLight: $('.colors .bg-primary-bright').css('background-color'),
            secondary: $('.colors .bg-secondary').css('background-color'),
            secondaryLight: $('.colors .bg-secondary-bright').css('background-color'),
            info: $('.colors .bg-info').css('background-color'),
            infoLight: $('.colors .bg-info-bright').css('background-color'),
            success: $('.colors .bg-success').css('background-color'),
            successLight: $('.colors .bg-success-bright').css('background-color'),
            danger: $('.colors .bg-danger').css('background-color'),
            dangerLight: $('.colors .bg-danger-bright').css('background-color'),
            warning: $('.colors .bg-warning').css('background-color'),
            warningLight: $('.colors .bg-warning-bright').css('background-color'),
            notReaded: $('.colors .bg-grey').css('background-color'),

        };
        $.get("@Url.Action("StatisticsData","Home",new {Area = "Admin" })", function (data) {

            console.log(data)
            $(".allcount").text(data.allQueryNumber);
            $(".onlinecount").text(data.onlineQueryNumber);
            $(".realcount").text(data.realQueryNumber);
            $(".pricetoday").text(data.priceToday+" AZN");
            $(".pricemonth").text(data.priceMonth+" AZN");
            $(".todaycount").text(data.todayOnline.length);
            $(".todaycountreal").text(data.todayReal.length);
            dayOnline(data.todayOnline, '#day_online', colors.primary);
            dayOnline(data.monthOnline, '#month_online', colors.success);
            dayOnline(data.monthReal, '#month_real', colors.info);
            dayOnline(data.todayReal, '#day_real', colors.warning);
        })





    function dayOnline(data,queryselector,color) {
        if ($(queryselector).length) {
          var datescon = [];

          var values = [];

            var datetimeformat = 'dd/MM/yy HH:mm';
            for (var i = 0; i < data.length; i++) {
                values.push(data[i].price);
                datescon.push(data[i].serveDate);
            }
            var options = {
                chart: {
                    height: 400,
                    type: 'area',
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    curve: 'smooth',
                    width: 2
                },
                markers: {
                    size: 0,
                    strokeColors: color,
                    colors: color
                },
                fill: {
                    type: 'gradient',
                    gradient: {
                        opacityFrom: 0.6,
                        opacityTo: 0,
                    }
                },
                series: [{
                    name: 'Gəlir',
                    data: values
                }],

                xaxis: {
                    type: 'datetime',
                    categories: datescon,
                },
                tooltip: {
                    x: {
                        format: datetimeformat
                    },
                }
            };

            var chart = new ApexCharts(
                document.querySelector(queryselector),
                options
            );

            chart.render();
        }
    }

       
    </script>
